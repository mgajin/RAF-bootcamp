<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="students-tab" data-toggle="tab" href="#students" role="tab" aria-controls="students" aria-selected="true">Students</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="professors-tab" data-toggle="tab" href="#professors" role="tab" aria-controls="professors" aria-selected="false">Professors</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="courses-tab" data-toggle="tab" href="#courses" role="tab" aria-controls="courses" aria-selected="false">Courses</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="students" role="tabpanel" aria-labelledby="students-tab"></div>
    <div class="tab-pane fade" id="professors" role="tabpanel" aria-labelledby="professors-tab">
        <div class="container">
            <div class="row pt-1 pb-1">
                <div class="col-12 mt-1 mb-1 d-flex justify-content-between">
                    <h3 class="m-0">Total: <%= @professors.length %></h3>
                    <%= link_to "Add New", new_professor_path, :class => 'btn btn-info' %>
                </div>
                <% @professors.each do |professor| %>
                <div class="col-12 mt-1 mb-1">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= "#{professor.first_name} #{professor.last_name}" %></h5>
                            <p class="card-text">
                                Courses:
                                <% professor.courses.each do |course| %>
                                <%= "#{course.name} " %>
                                <% end %>
                            </p>
                            <%= link_to "Details", professor_path(professor), :class => 'btn btn-light' %>
                            <%= link_to "Remove", professor_path(professor), 
                            :class => 'btn btn-danger', 
                            method: :delete, 
                            data: { confirm: 'Are you sure?' }
                        %>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="courses" role="tabpanel" aria-labelledby="courses-tab">
        <div class="container">
            <div class="row pt-1 pb-1">
                <div class="col-12 mt-1 mb-1 d-flex justify-content-between">
                    <h3 class="m-0">Total: <%= @courses.length %></h3>
                    <%= link_to "Add New", new_course_path, :class => 'btn btn-info' %>
                </div>
                <% @courses.each do |course| %>
                <div class="col-12 mt-1 mb-1">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= course.name %></h5>
                            <p class="card-text">Professor: <%= "#{course.professor.first_name} #{course.professor.last_name}" %></p>
                            <%= link_to "Details", course_path(course), :class => 'btn btn-light' %>
                            <%= link_to "Remove", course_path(course), 
                            :class => 'btn btn-danger', 
                            method: :delete, 
                            data: { confirm: 'Are you sure?' }
                        %>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>