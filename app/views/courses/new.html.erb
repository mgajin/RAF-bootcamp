<br>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "Admin", admin_path %></li>
        <li class="breadcrumb-item"><%= link_to "Courses", admin_path %></li>
        <li class="breadcrumb-item active" aria-current="page">New</li>
    </ol>
</nav>

<%= form_for :course, url: courses_path do |f| %>
<% if @course.errors.any? %>
<% @course.errors.full_messages.each do |msg| %>
<div class="alert alert-danger">
    <%= msg %>
</div>
<% end %>
<% end %>
<div class="card">
    <div class="card-body">
        <h1 class="card-title text-center">New Course</h1>
        <div class="container">
            <div class="row pt-1 pb-1">
                <div class="col-12 mt-1 mb-1">
                    <%= f.label :name %>
                    <br>
                    <%= f.text_field(:name, :class => 'form-control') %>
                </div>
                <div class="col-12 mt-1 mb-1">
                    <%= f.label :professor_id %>
                    <br>
                    <select name=professor_id class="custom-select">
                        <% @professors.each do |professor| %>
                        <option value="<%= professor.id %>"><%= professor.first_name + ' ' + professor.last_name %></option>
                        <% end %>
                    </select>
                </div>
                <div class="col-12 mt-1 mb-1">
                    <%= f.submit({:class => 'btn btn-primary'}) %>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>