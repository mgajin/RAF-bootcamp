<div class="container">
    <div class="row pt-1 pb-1">
        <div class="col-12 p-2 d-flex justify-content-between">
            <h3 class="m-0">Total: <%= @courses.length %></h3>
            <%= link_to "Add New", new_course_path, :class => 'btn btn-info' %>
        </div>
        <% @courses.each do |course| %>
        <div class="col-12 col-md-6 p-2">
            <div class="card h-100">
                <div class="card-body d-flex justify-content-between">
                    <div>
                        <h5 class="card-title"><%= course.name %></h5>
                        <p class="card-text">Professor: <%= "#{course.professor.first_name} #{course.professor.last_name}" %></p>
                    </div>
                    <div class="d-flex flex-column align-items-center justify-content-between">
                        <%= link_to course_path(course), :class => 'link' do %>
                        <i class="fas fa-info-circle"></i>
                        <% end %>
                        <%= link_to course_path(course),:class => 'link', method: :delete, data: { confirm: 'Are you sure?' } do %>
                        <i class="fas fa-trash text-danger"></i>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>